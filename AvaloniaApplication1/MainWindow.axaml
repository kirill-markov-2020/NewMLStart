<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication1.MainWindow"
        xmlns:figures="using:Stage2.Figures">
	<StackPanel>
		<TextBlock Text="Список фигур" HorizontalAlignment="Center" Margin="10"/>
		<ListBox ItemsSource="{Binding Figures}" HorizontalAlignment="Center" Width="300" Height="400">
            <ListBox.DataTemplates>
                <DataTemplate x:DataType="figures:Figure">
                    <StackPanel>
                        <Image Source="{Binding ImagePath}" Width="50" Height="50"/>
                        <TextBlock Text="{Binding Name}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.DataTemplates>
        </ListBox>
		<Button Content="Выполнить задачу" Name="PerformTaskButton" HorizontalAlignment="Center" Margin="10" Click="PerformTaskButton_Click"/>
	</StackPanel>
</Window>
